{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "quotes": ["error", "double"],
        "no-undef": "off",
        "no-param-reassign": "off",
        "global-require": "off",
        "import/no-dynamic-require": "off",
        "no-console": "off",
        "no-underscore-dangle": "off",
        "no-multi-spaces": ["error", { "exceptions": { "VariableDeclarator": true, "Property": true } }],
        "max-len": ["error", 150],
        "no-bitwise": "off"
    }
}